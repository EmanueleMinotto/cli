{
    "name": "puli/cli",
    "description": "A Command Line Interface (CLI) for managing Puli repositories.",
    "homepage": "http://puli.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.9",
        "puli/repository": "~1.0",
        "puli/discovery": "~1.0",
        "puli/factory": "~1.0",
        "puli/repository-manager": "~1.0",
        "puli/composer-plugin": "~1.0",
        "symfony/console": "~2.5",
        "symfony/process": "~2.5"
    },
    "require-dev": {
        "symfony/filesystem": "~2.3"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Puli\\Cli\\": "src/",
            "Webmozart\\Console\\": "console/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Puli\\Cli\\Tests\\": "tests/",
            "Webmozart\\Console\\Tests\\": "console-tests/"
        }
    },
    "bin": ["bin/puli"],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "support": {
        "issues": "https://github.com/puli/puli/issues"
    }
}
