{
    "name": "puli/puli-cli",
    "description": "A Command Line Interface (CLI) for managing Puli repositories.",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.9",
        "puli/puli": "~1.0@dev",
        "puli/puli-package-manager": "~1.0@dev",
        "puli/json": "~1.0@dev",
        "symfony/console": "~2.5"
    },
    "require-dev": {
        "symfony/filesystem": "~2.3"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Puli\\Cli\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Puli\\Cli\\Tests\\": "tests/"
        }
    },
    "bin": ["bin/puli"],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
