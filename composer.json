{
    "name": "puli/cli",
    "description": "A Command Line Interface (CLI) for managing Puli repositories.",
    "homepage": "http://puli.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.9",
        "puli/repository": "1.0.*",
        "puli/discovery": "^1.0-beta8",
        "puli/url-generator": "^1.0",
        "puli/manager": "^1.0-beta8",
        "webmozart/console": "^1.0-beta2",
        "webmozart/path-util": "^2.2.2",
        "webmozart/key-value-store": "^1.0.0-beta5",
        "webmozart/expression": "^1.0-beta4",
        "webmozart/glob": "^3.1",
        "symfony/filesystem": "^2.3",
        "padraic/phar-updater": "^1.0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.6",
        "sebastian/version": "^1.0.1"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Puli\\Cli\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Puli\\Cli\\Tests\\": "tests/",
            "Puli\\Repository\\Tests\\": "vendor/puli/repository/tests/",
            "Puli\\Manager\\Tests\\": "vendor/puli/manager/tests/",
            "Puli\\Discovery\\Tests\\": "vendor/puli/discovery/tests/"
        }
    },
    "bin": ["bin/puli"],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "support": {
        "issues": "https://github.com/puli/issues/issues"
    }
}
